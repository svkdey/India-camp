<body>
    
            <nav class="navbar navbar-expand-lg navbar-inverted bg-light">
                    <a class="navbar-brand" href="/campgrounds"><i class="far fa-compass"></i>Camp Share</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                      <span class="navbar-toggler-icon"></span>
                    </button>
                  
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                          <a class="nav-link" href="/campgrounds">Experiences</a>
                        </li>
                        <li class="nav-item active">
                          <a class="nav-link" href="/campgrounds/new">New Post</a>
                        </li></ul>
                   
                      <form action="/campgrounds" method="get" >
                        <div class="form-inline my-2 my-lg-0 ">
                          <input class="form-control mr-sm-2" type="search" placeholder="Search"  name="search" aria-label="Search">
                          <button class="btn btn-bg-danger my-2 my-sm-0" value="search" type="submit">Search</button>
                        </div>                 
                  </form>                  
                <% if(!currentUser){%>
                        <ul class="navbar-nav ml-auto">
                         <li class="nav-item active">
                              <a class="nav-link" href="/register">Sign Up</a>
                            </li>
                         <li class="nav-item active">
                               <a class="nav-link" href="/login">Log In</a>
                               </li></ul>
                              <%} else {%>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Logged in as <%=currentUser.username%></a>
                            </li>    
                        <li class="nav-item active">
                                    <a class="nav-link" href="/logout">Log Out</a>
                        </li></ul>
                     <% }%>
                    </div>
                  </nav>
                  <div class="container">
                   <% if(error &&error.length>0){%>
                    <div class="alert alert-danger" role="alert">
                        <h3><%=error%></h3>
                    </div>
                    <%}%>
                    <% if(success &&success.length>0){%>
                      <div class="alert alert-success" role="alert">
                          <h3><%=success%></h3>
                        </div>
                      <%}%>
                    </div>
                    


 